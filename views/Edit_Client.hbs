<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Client</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>

<div class="container mt-4">
    <h2>Edit Client Profile</h2>
    
    <!-- Edit Client Form -->
    <form id="editClientForm" action="/admin/edit-client/{{client._id}}" method="POST">
        <div class="mb-3">
            <label for="firstName" class="form-label">First Name</label>
            <input type="text" class="form-control" id="firstName" name="firstName" value="{{client.firstName}}" required>
        </div>
        
        <div class="mb-3">
            <label for="lastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" value="{{client.lastName}}" required>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="{{client.email}}" required>
        </div>
        
        <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input type="text" class="form-control" id="phone" name="phone" value="{{client.phone}}" required>
        </div>

        <button type="button" class="btn btn-primary" onclick="confirmSave()">Save Changes</button>
        <a href="/client-profiles" class="btn btn-secondary">Cancel</a>
    </form>
        <a href="/admin_dashboard" class="btn btn-secondary mt-3">Go Back to Admin Dashboard</a>

</div>

<script>
    // Confirm Save Function
    function confirmSave() {
        if (confirm('Are you sure you want to save changes to this client profile?')) {
            document.getElementById('editClientForm').submit();
        }
    }
</script>

</body>
</html>
